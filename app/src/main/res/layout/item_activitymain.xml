<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_15sdp"
    android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:elevation="3dp"
                app:cardCornerRadius="10dp"
                android:layout_weight="30"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:scaleType="fitXY"
                    android:src="@color/black_color" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_weight="70"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_5sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                    android:id="@+id/itemName_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Brumze Plan"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_toLeftOf="@+id/relative_layout"/>

                    <RelativeLayout
                        android:id="@+id/relative_layout"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@drawable/round_green">

                        <TextView
                            android:id="@+id/rating_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.0"
                            android:padding="@dimen/_2sdp"
                            android:textColor="@color/white_color"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"/>

                    </RelativeLayout>

                </RelativeLayout>
                <TextView
                    android:id="@+id/material_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pizza" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="@dimen/_2sdp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/_8sdp"
                        android:layout_height="@dimen/_8sdp"
                        android:src="@drawable/black_rupee_symbol"
                        android:alpha="0.5"/>

                <TextView
                    android:id="@+id/promoted_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200 per person | 52 mins" />

                </LinearLayout>

                <TextView
                    android:id="@+id/closetime_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Closes in 25 Minutes"
                    android:textColor="@android:color/holo_red_light" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_2sdp"
                    android:text="Well sanitized kitchen * Daily temperature checks * Rider hand wash"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
</LinearLayout>